{{!< default}}

{{#post}}
  <article class="post-container post-container--single">
    <header class="post-header">
      <h1 class="post-title">{{{title}}}</h1>
    </header>
    <section class="{{post_class}}">
      {{content}}
    </section>
  </article>

{{/post}}

{{#if @custom.remark64_config}}
 <div id="remark42"></div>

<script async>
  var remark_config = {{{@custom.remark64_config}}}
  !function(e, document) {
  var i = 0;
  for (; i < e.length; i++) {
    var el = document.createElement("script");
    var newHTML = ".js";
    var d = document.head || document.body;
    if ("noModule" in el) {
      el.type = "module";
      newHTML = ".mjs";
    } else {
      el.async = true;
    }
    el.defer = true;
    el.src = remark_config.host + "/web/" + e[i] + newHTML;
    d.appendChild(el);
  }
}(remark_config.components || ["embed"], document);

</script>

{{/if}}

